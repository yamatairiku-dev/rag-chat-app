# ================================
# 開発環境用設定
# ================================
NODE_ENV=development
PORT=3000

# ================================
# Microsoft Entra ID (旧 Azure AD)
# ================================
# Azure Portalから取得したクライアントIDを設定
ENTRA_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ENTRA_CLIENT_SECRET=your-client-secret-here
ENTRA_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# 開発環境のリダイレクトURI
ENTRA_REDIRECT_URI=http://localhost:3000/callback
ENTRA_POST_LOGOUT_REDIRECT_URI=http://localhost:3000
ENTRA_AUTHORITY=https://login.microsoftonline.com

# ================================
# Microsoft Graph API
# ================================
GRAPH_API_URL=https://graph.microsoft.com/v1.0
GRAPH_API_SCOPE=https://graph.microsoft.com/.default
GRAPH_DEPARTMENT_GROUP_PREFIX=DEPT_

# ================================
# Dify API
# ================================
# ローカルまたは開発用DifyのURL
DIFY_API_URL=http://localhost:8000
# または: https://dev-dify-vm.japaneast.cloudapp.azure.com
DIFY_API_KEY=app-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DIFY_TIMEOUT=30000
DIFY_MAX_RETRIES=3

# ================================
# セッション管理
# ================================
# 開発環境用のセッションシークレット（本番とは異なるものを使用）
SESSION_SECRET=development-secret-please-change-this-to-random-32-chars
SESSION_MAX_AGE=86400000
SESSION_RESET_HOUR=0
SESSION_STORAGE=memory

# ================================
# Cookie設定
# ================================
# 開発環境ではlocalhostのためドメイン指定なし
COOKIE_DOMAIN=
# 開発環境ではHTTPを許可
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_HTTP_ONLY=true

# ================================
# ログ設定
# ================================
# 開発環境では詳細ログを出力
LOG_LEVEL=debug
LOG_DIRECTORY=./logs
LOG_MAX_FILES=7

# ================================
# パフォーマンス設定
# ================================
MAX_MESSAGE_LENGTH=2000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
